---
const { platform, username } = Astro.props;
const link = `https://${platform}.com/${username}`;
---

<style>
  a {
    padding: 0.5rem 1rem;
    color: white;
    background-color: #4c1d95;
    text-decoration: none;
  }
  a:hover {
    background-color: #6b21a8;
  }
</style>

<a href={link}>{platform}</a>
